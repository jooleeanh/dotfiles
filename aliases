# Get External IP / local IPs
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000'  # Or python -m SimpleHTTPServer :)

# My aliases
alias chr='google-chrome'
alias chrn='google-chrome --new-window'
alias treel='tree -L'
alias atomaliases='atom -n --clear-window-state ~/.aliases ~/.atom/snippets.cson ~/.atom/keymap.cson ~/.gitconfig'
alias aliasesv='cat ~/.aliases'
alias ato='atom -n .'
alias aton='atom -n'
alias ato..='atom -n ../.'
alias atoms='cat ~/.atom-shortcuts.md'
alias ci='git commit -m "'
alias te='open -a TextEdit'
alias scripts='cd $SCRIPT_PATH'
alias aliases='aton ~/.bashrc ~/.zshrc ~/.aliases $SCRIPT_PATH/*'
alias reload='exec ~/.zshrc'
